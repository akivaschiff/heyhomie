# Interaction Mode: "audio" (Raspberry Pi with voice) or "text" (MacBook testing)
INTERACTION_MODE=audio

# Picovoice - https://console.picovoice.ai/ (only needed in audio mode)
PORCUPINE_ACCESS_KEY=your_access_key_here
WAKE_WORD_PATH=yo-home.ppn
WAKE_PHRASE=Yo Home

# OpenAI - https://platform.openai.com/api-keys (only needed in audio mode for Whisper STT)
OPENAI_API_KEY=your_openai_key_here

# Anthropic - https://console.anthropic.com/ (required in both modes)
ANTHROPIC_API_KEY=your_anthropic_key_here

# Calendar MCP Configuration
ENABLE_CALENDAR_MCP=true
DEFAULT_CALENDAR_ID=your_email@gmail.com
GOOGLE_SERVICE_ACCOUNT_PATH=../secrets/google-calendar.json

# Piper TTS (Linux only) - download voices from https://huggingface.co/rhasspy/piper-voices
PIPER_MODEL_PATH=~/piper-voices/en_US-lessac-medium.onnx
